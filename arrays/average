#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter the array size"<<endl;
    cin>>n;
    float arr[n],sum=0;
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for(auto x:arr){ //changes in x do not reflect in array
        sum=sum+x;
        
    }
    cout<<"average is "<<sum/n;
}
